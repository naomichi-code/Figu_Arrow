          .col-md-4
            =link_to post_path(exc),data: {"turbolinks" => false} do
              - photo = Settings.image_icon_url + exc.item_photos.first.photo_id + "-thumbnail."
              =image_tag photo,size: '158x120'
              -#= attachment_image_tag(exc.item_photos.first, :photo, :fill ,158,120,format: "png", fallback: "no-image-icon.jpg")
          .col-md-8
            .body
            -exc.tags.each do |t|
              %h5.d-inline.cord-title
                =t.chara_tag
              %p.card-text.mt-3
                =exc.requirement.truncate(25)
              %span.text-muted= "投稿日:#{exc.created_at.strftime('%Y/%m/%d %H:%M')}"
    = paginate @exchanges
