-#フォローボタン
- if current_user.following?(user)
  = link_to 'フォローを外す', user_relationships_path(user.id), {method: :delete, class: 'btn btn-danger px-5'}
  %br
  = link_to "DMを送る", chat_path(@user.id)
- else
  = link_to 'フォローする', user_relationships_path(user.id), {method: :POST, class: 'btn btn-block btn-success'}
  %br
  = link_to "DMを送る", chat_path(@user.id)