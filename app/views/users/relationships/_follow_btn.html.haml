-#フォローボタン
- if current_user.following?(user)
  = link_to 'フォローを外す', user_relationships_path(user.id), {method: :delete, class: 'btn btn-danger',style: 'width:60%;'}
  %br
  = link_to "DMを送る", chat_path(@user.id), class: 'badge badge-pill badge-secondary'
- else
  = link_to 'フォローする', user_relationships_path(user.id), {method: :POST, class: 'btn btn-success',style: 'width:60%;'}
  %br
  = link_to "DMを送る", chat_path(@user.id), class: 'badge badge-pill badge-secondary'